@model IEnumerable<CrudDF3.Models.Role>

@{
    ViewData["Title"] = "Lista de Roles";
}

<h1 class="mb-3">Lista de Roles</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Crear Nuevo</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NombreRol)</td>
                <td>@Html.DisplayFor(modelItem => item.DescripcionRol)</td>
                <td>
                    @if (item.EstadoRol)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdRol" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdRol" class="btn btn-info btn-sm">
                        <i class="fas fa-info-circle"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdRol" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

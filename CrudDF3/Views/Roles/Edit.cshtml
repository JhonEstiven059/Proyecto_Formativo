@model CrudDF3.Models.Role

@{
    ViewData["Title"] = "Editar Rol";
}

<h1>Editar Rol</h1>

<div class="card mt-3">
    <div class="card-header bg-warning text-dark">
        <strong>Modificar Información del Rol</strong>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="IdRol" />

            <!-- NOMBRE DEL ROL -->
            <div class="mb-3">
                <label asp-for="NombreRol" class="form-label"><strong>Nombre del Rol</strong></label>
                <input asp-for="NombreRol" class="form-control" placeholder="Ingrese el nombre del rol" />
                <span asp-validation-for="NombreRol" class="text-danger"></span>
            </div>

            <!-- DESCRIPCIÓN DEL ROL -->
            <div class="mb-3">
                <label asp-for="DescripcionRol" class="form-label"><strong>Descripción</strong></label>
                <input asp-for="DescripcionRol" class="form-control" placeholder="Ingrese la descripción" />
                <span asp-validation-for="DescripcionRol" class="text-danger"></span>
            </div>

            <!-- ESTADO DEL ROL -->
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="EstadoRol" id="estadoRolCheckbox" />
                <label class="form-check-label" for="estadoRolCheckbox">
                    @Html.DisplayNameFor(model => model.EstadoRol)
                </label>
            </div>

            <!-- BOTONES -->
            <div class="mt-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model CrudDF3.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Inicio de Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesión</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
     <link rel="stylesheet" href="@Url.Content("~/css/IniciarSesion.css")" />
</head>
<body>

    <div class="container d-flex flex-grid ">
        <div class="logo mb-4">
            <img src="/Imagenes/Imagen.jpg" alt="Traveler’s Home" style="height: 300px;" class="img-fluid"
                 style="margin-left: 200px; margin-top: 34px;">
        </div>

        <div class="content-form" style="width: 350px; margin-top:15px;">
            <h2 class="Title-Content text-center">Iniciar Sesión</h2>

            <form method="post" asp-action="Login" asp-controller="Account">
                <div class="mb-3">
                    <label asp-for="CorreoUsuario" class="form-label">Correo Electrónico</label>
                    <input asp-for="CorreoUsuario" class="form-control" placeholder="Ingresa tu correo electrónico" required>
                    <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ContraseñaUsuario" class="form-label">Contraseña</label>
                    <input asp-for="ContraseñaUsuario" type="password" class="form-control" placeholder="Ingresa tu contraseña" required>
                    <span asp-validation-for="ContraseñaUsuario" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
                <div class="text-center mt-3">
                    <p><a asp-action="RecuperarContraseña" asp-controller="Account">¿Olvidaste tu contraseña?</a></p>
                    <p><a asp-action="Registrar" asp-controller="Account">¿No tienes cuenta? Regístrate</a></p>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="Script Iniciar Sesion.js"></script>


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    </body>
    </html>

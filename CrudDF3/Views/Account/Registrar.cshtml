@model CrudDF3.Models.ViewModels.RegistrarViewModel

@{
    ViewData["Title"] = "Registro de Cliente";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>

 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="@Url.Content("~/css/Registrar.css")" asp-append-version="true" />
   
</head>
<body>

    <div class="container d-flex justify-content-center align-items-center">
        <div class="content-form bg-white p-4 rounded shadow" style="max-width: 400px; width: 100%;">
            <h2 class="Title-Content text-center">Registro</h2>

            <form method="post" asp-action="Registro" asp-controller="Account">
                <div class="mb-3">
                    <label asp-for="CedulaUsuario" class="form-label">Cédula</label>
                    <input asp-for="CedulaUsuario" class="form-control" placeholder="Ingrese su Cédula" required>
                </div>

                <div class="mb-3">
                    <label asp-for="NombreUsuario" class="form-label">Nombre</label>
                    <input asp-for="NombreUsuario" class="form-control" placeholder="Ingrese su Nombre" required>
                </div>

                <div class="mb-3">
                    <label asp-for="ApellidoUsuario" class="form-label">Apellido</label>
                    <input asp-for="ApellidoUsuario" class="form-control" placeholder="Ingrese su Apellido" required>
                </div>

                <div class="mb-3">
                    <label asp-for="CorreoUsuario" class="form-label">Correo Electrónico</label>
                    <input asp-for="CorreoUsuario" type="email" class="form-control" placeholder="Ingresa tu correo electrónico" required>
                </div>

                <div class="mb-3">
                    <label asp-for="EdadUsuario" class="form-label">Edad</label>
                    <input asp-for="EdadUsuario" type="number" class="form-control" placeholder="Ingrese su Edad" required>
                </div>

                <div class="mb-3">
                    <label asp-for="ContraseñaUsuario" class="form-label">Contraseña</label>
                    <input asp-for="ContraseñaUsuario" type="password" class="form-control" placeholder="Ingrese su contraseña" required>
                </div>

                <div class="mb-3">
                    <label asp-for="Direccion" class="form-label">Dirección</label>
                    <input asp-for="Direccion" class="form-control" placeholder="Ingrese su dirección" required>
                </div>

                <div class="mb-3">
                    <label asp-for="Telefono" class="form-label">Teléfono</label>
                    <input asp-for="Telefono" type="number" class="form-control" placeholder="Ingresa su Teléfono" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Registro</button>
                <div class="text-center mt-3">
                    <p><a asp-action="Login" asp-controller="Account">¿Ya tienes cuenta? Inicia sesión</a></p>
                </div>
            </form>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    
    <script src="@Url.Content("~/js/registro.js")" asp-append-version="true"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
